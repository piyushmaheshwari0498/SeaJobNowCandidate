<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeaJobNowCandidate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
       <!-- <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <!--<item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/bule_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="searchcustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blue_500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>
    <style name="Theme.SeaJobNowCandidate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ContentTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Theme.SeaJobNowCandidate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SeaJobNowCandidate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TitleTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/extra_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MediumContent" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
    <style name="MediumTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="ButtonAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonStyle">@style/MyCustomButton</item>
    </style>
    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="PaddingMediumTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="fontFamily">@font/roboto_regular</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="NormalTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
       <!-- <item name="fontFamily">@font/roboto_regular</item>-->
    </style>

    <style name="CardBackgroundColor" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/holo_blue_light</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="tabSelectedTextColor">@android:color/holo_blue_light</item>
    </style>
</resources>